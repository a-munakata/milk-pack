{
  "globals": {
    "$": true,
    "__DEV__": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "rules": {
    "complexity": [1, 5],
    "key-spacing": 0,
    "new-cap": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "no-trailing-spaces": 0,
    "no-unused-vars": 0,
    "handle-callback-err": 0,
    "camelcase": 0,
    "no-unused-expressions": 0,
    "curly": 0,
    "quotes": [0, "double"],
    "indent": [2, 2],
    "comma-style": [2, "last"],
    "quotes": [2, "single"],
    "space-before-blocks": [2, "always"],
    "max-nested-callbacks": [1, 3],
    "no-var": 1,
    "max-len": [1, 100, 2],
    "max-params": [1, 4],
    "max-statements": [1, 12]
  }
}
